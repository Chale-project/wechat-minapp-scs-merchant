.sale-item {
  background: #fff;
  margin-bottom:10px;
  display: flex;
  align-items: center;
  flex-direction: column;
  height: 170px;
}
.saletopitem {
  width: 100%;
  height: 120px;
  display: flex;
  align-items: center;
  flex-direction: row;
  border-bottom: 1px solid #f5f5f5;
  padding: 0 10px;
}
.userIconImg {
  width:90px;
  height:90px;
  background: #f5f5f5;
}
.saletopRight {
  padding-left: 10px;
  width: calc(100% - 90px);
  height: 100px;
}
.detailarrow {
  width: 20px;
}
.saletopfir {
  height: 40%;
}
.productName {
  color:#333;
  font-size: 14px;
  text-overflow: ellipsis;
  overflow: hidden;
  -webkit-box-orient:vertical;
  -webkit-line-clamp:2;
  display:-webkit-box;
}
.saletopSec {
  margin-top: 2%;
  height: 58%;
}
.productPrice {
  color:#666;
  font-size: 12px;
  margin-top:2px;
}
.productPrice text{
  color: red;
  font: bold;
  font-size: 14px;
}
.oripriceview {
  color:#666;
  font-size: 12px;
  margin-top:2px;
}
.totalsale {
  color:#666;
  font-size: 12px;
  height: 26px;
  width: 100%;
}
.powerview {
  width: 100%;
  height: 50px;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 10px;
}
.addtimeview {
  font-size: 12px;
  color: #666;
  width: calc(100% - 110px);
  padding-left: 10px;
}
.rightdeletclass {
  width: 50px;
  height: 50px;
  display: flex;
  align-items: center;
  justify-content: center;
  
}
.silldeletImg {
  width: 15px;
  height: 15px;
}
