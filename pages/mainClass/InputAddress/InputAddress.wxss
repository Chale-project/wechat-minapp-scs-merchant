  border-radius:5px;
  display:flex;
  align-items:center;
  flex-direction:column;
}
.addresspoptitle {
  height:80px;
  width:260px;
  padding-top:20px;
  font-size:16px;
  color:#333;
}
.bottomview {
  height:50px;
  display:flex;
  align-items:center;
  flex-direction:row;
  width:100%;
}
