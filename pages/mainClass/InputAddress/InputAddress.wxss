.cu-form-group .title {
  min-width: calc(4em + 30rpx);
}
.change-btn {
  font-size:14px;
  height:46px;
  border-radius:5px;
  display:flex;
  align-items:center;
  justify-content:center;
  color:#fff;
  margin-top: 30px;
  margin-left: 10%;
  margin-right: 10%;
}
.change-btn:active {
  opacity: .8;
}

