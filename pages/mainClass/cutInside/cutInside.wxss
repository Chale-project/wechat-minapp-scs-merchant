.imageloadbtn {
    display: flex;
    justify-content: space-between;
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    right: 0;
    height: 50px;
    padding: 0 20rpx;
    background: #000;
    z-index: 999;
}
.upload {
    text-align: center;
    height:40px;
    line-height:40px;
    border-radius:2px;
    color:#ffffff;
    background:#666;
    width:100px;
}