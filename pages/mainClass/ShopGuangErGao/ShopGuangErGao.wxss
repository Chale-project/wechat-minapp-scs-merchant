.title-item{
  background: #fff;
  margin-bottom: 10px;
  padding: 10px;
}
.topview {
  height: 50px;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.imageall {
  display: flex;
  align-items: center;
  flex-direction: column;
}
.emptyview {
  margin-top: 10px;
  width: 300px;
  height: 200px;
  border: 2px dashed #f5f5f5;
  display: flex;
  align-items: center;
  justify-content: center;
}
.imageupload {
  width: 40px;
  height: 40px;
}
.imageview {
  width: 100%;
  height: 100%;
}
.bottomview {
  margin: 20px 0;
  display: flex;
  align-items: center;
  flex-direction: column;
}
