@import "/wxParse/wxParse.wxss";
.addtpic-item {
  height:100px;
  display:flex;
  align-items:center;
  justify-content:center;
  flex-direction:column;
  margin-left:20px;
}
.addsinglepic {
  width:50px;
  height:50px;
}
.addsinglepro {
  text-align:center;
  line-height:30px;
}
.pagecontainer {
  margin-bottom: 40px;
}
.page-body {
  width: 100%;
}
.wrapper {
  padding: 5px;
  margin-bottom: 40px;
}

.iconfont {
  display: inline-block;
  padding: 8px 8px;
  width: 24px;
  height: 24px;
  cursor: pointer;
  font-size: 20px;
}
.toolbar {
  height:100px;
  position:fixed;
  z-index:1;
  background:#fff;
  width:100%;
  display:flex;
}
.ql-container {
  box-sizing: border-box;
  padding: 12px 15px;
  width: 100%;
  min-height: 30vh;
  height: auto;
  /* border-top: 1px solid #ccc;
  border-bottom: 1px solid #ccc; */
  background: #fff;
  margin-top: 110px;
  font-size: 16px;
  line-height: 1.5;
}

.ql-active {
  color: #06c;
}

.savebrn {
  left: 0;
  right: 0;
  bottom: 0;
  position: fixed;
  height: 40px;
  text-align: center;
  line-height: 40px;
  background: #ff4444;
  color: #fff;
}
