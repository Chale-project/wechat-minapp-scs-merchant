.sale-item {
  background: #fff;
  margin-bottom:10px;
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 100%;
  height: 120px;
}
.checkchooseview {
  width: 50px;
  display: flex;
  align-items: center;
  justify-content: center;
}
.rightitemview {
  width: calc(100% - 60px);
  display: flex;
  align-items: center;
  flex-direction: row;
}
.xuanzeguige{
  width: 60px;
  display: flex;
  align-items: center;
  justify-content: center;
}
.guigechoose {
  width:50px;
  line-height:30px;
  border-radius:15px;
  font-size:12px;
  color: #fff;
  padding: 0 5px;
  background: #ff4444;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
  text-align: center;
}
.userIconImg {
  width:90px;
  height:90px;
  background: #f5f5f5;
}
.rightallview {
  height: 100px;
  padding-left: 10px;
  width: calc(100% - 90px);
}
.rightfirview {
  height: 40%;
}
.productName {
  color:#333;
  font-size: 14px;
  text-overflow: ellipsis;
  overflow: hidden;
  -webkit-box-orient:vertical;
  -webkit-line-clamp:2;
  display:-webkit-box;
}
.rightsecview {
  margin-top: 2%;
  height: 58%;
}
.productPrice {
  color:#666;
  font-size: 12px;
  margin-top:2px;
}
.productPrice text{
  color: red;
  font: bold;
  font-size: 14px;
}
.oripriceview {
  color:#666;
  font-size: 12px;
  margin-top:2px;
}
.guigename {
  margin-top:2px;
  display: flex;
}
.guigenamedetail {
  color:#999;
  font-size:12px;
  /* background:#ac9514; */
  border-radius:10px;
  padding:0 5px;
  max-width: 150px;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
  text-align: center;
  line-height: 20px;
}
.totalsale {
  color:#666;
  font-size: 12px;
}
.totalsale text {
  color: green;
}
.bottomview {
  height: 50px;
  bottom: 0px;
  background: red;
  color: #fff;
  z-index: 999;
  position:fixed;
  left:0;
  right:0;
  text-align: center;
  line-height: 50px;
}
/* 选规格 */
.vanContentView {
  width: 330px;
  height: 260px;
  background: #fff;
  display: flex;
  align-items: center;
  flex-direction:column;
  border-radius: 5px;
}
.catertoptitle {
  width: 100%;
  height: 50px;
  text-align: center;
  color: #333;
  line-height: 50px;
  border-bottom: 1px solid #f5f5f5;
}
.guigecenterview {
  margin-top: 10px;
  width: 100%;
  height: 150px;
  display: flex;
  padding: 5px;
}
.guigecenterview::after {
  content: '';
  display: block;
  clear: both;
}
.guigenumview{
  box-sizing: content-box;
  min-width: calc(25% - 10px);
  height: 30px;
  float: left;
  padding: 5px;
  max-width: 100%;
}
.guigesingleview {
  height: 50px;
  padding: 0 5px;
  display: flex;
  align-items: center;
  flex-direction: row;
}
.guigenameview {
  color: #000;
  width: 60px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.guigepriceview {
  padding-left: 2px;
  width: 80px;
  color: #000;
}
.lingshouview{
  width:80px;
  border:1px solid #ccc;
  margin-left:10px;
  display:flex;
  align-items:center;
  border-radius:5px;
}
.placeholder {
  color: #ccc;
  font-size: 10px;
}
.guigesingleprice{
  color: #000;
  text-align:left;
  text-overflow:ellipsis;
  white-space:nowrap;
  overflow:hidden;
  font-size: 12px;
}
.guigesingleprices {
  color: #000;
  border-radius:5px;
  border:1px solid #ccc;
  text-align:center;
  width:80px;
  margin-left:10px;
  text-overflow:ellipsis;
  white-space:nowrap;
  overflow:hidden;
  font-size: 12px;
  margin-right: 2px;
}
.cancleorsure {
  margin-top: 10px;
  width: 100%;
  height: 40px;
  display: flex;
  align-items: center;
  flex-direction: row;
  border-top: 1px solid #f5f5f5;
}
.guigeverlineview {
  width: 1px;
  z-index: 10;
  height: 100%;
  background: #f5f5f5;
}
.cancleview {
  width: 50%;
  color: #333;
  background: #f5f5f5;
  text-align: center;
  line-height: 40px;
  border-bottom-left-radius: 5px;
}
.sureview {
  width: 50%;
  background: #ff4444;
  color: #fff;
  text-align: center;
  line-height: 40px;
  border-bottom-right-radius: 5px;
}
