/* pages/mainClass/AddStore/AddStore.wxss */
.student-item {
  height: 60px;
  background: #fff;
  border-bottom:1px solid #f5f5f5;
  align-items: center;
  display: flex;
  justify-content: space-between
}
.iconImage {
  margin-left: 10px;
  width: 30px;
  height: 30px;
}
.studentName {
  width: 80px;
  margin-left: 10px;
  color: #000000;
  font-size: 16px;
}
.arrowRight {
  margin-right: 16px;
}
.iconfile {
  margin-right: 16px;
  width: 30px;
  height: 30px;
  border-radius: 15px;
  background: #f5f5f5;
}
.placeholder {
  color: #ccc;
}
.editInput {
  width: calc(100% - 110px);
  color: #000;
  font-size: 16px;
  min-height: 60px;
  display: flex;
  align-items: center;
  height: 60px;
}
.tapview {
  color: #ccc;
  font-size: 16px;
}
.confirm-btn {
  font-size:16px;
  height:46px;
  border-radius:23px;
  display:flex;
  align-items:center;
  justify-content:center;
  color:#fff;
  margin-top: 30px;
  margin-left: 10%;
  width: 80%;
}
.confirm-btn:active {
  opacity: .8;
}
.addressContentView {
  width:300px;
  height:130px;
  background:#fff;
  border-radius:5px;
  display:flex;
  align-items:center;
  flex-direction:column;
}
.addresspoptitle {
  height:80px;
  width:260px;
  padding-top:20px;
  font-size:16px;
  color:#333;
}
.bottomview {
  height:50px;
  display:flex;
  align-items:center;
  flex-direction:row;
  width:100%;
}
.canclbutton {
  width:50%;
  background:#f5f5f5;
  color:#333;
  height:100%;
  line-height:50px;
}
.choosetishi {
  width: 100%;
  height: 40px;
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-bottom: 5px;
}
.tishipic {
  width: 20px;
  height: 20px;
  margin-left: 30px;
}
.tishiview {
  padding-left: 10px;
  color: #FF9C50;
  font-size: 14px;
  width: calc(100% - 50px);
}
.surebutton {
  width:50%;
  background:#ff4444;
  color:#fff;
  height:100%;
  line-height:50px;
}
