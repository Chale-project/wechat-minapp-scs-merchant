.main {
  display: flex;
  align-items: center;
  justify-content: center;  
  width: 100%;
  flex-direction: column;
  height: 100%;
}

.button{
  border-radius: 10px;
  background-color: #ff4444;
  width: 120px;
  display: flex;
  align-items: center;
  margin-top: 30px;
  height: 40px;
  justify-content: center;
}

.savebtn {
  margin-left: 25px;
  margin-right:25px;
  margin-bottom:10px;
  color: #fff;
  background: #ff4444;
  border-radius: 5px;
  text-align: center;
  height: 40px;
  line-height: 40px;
}

.bottomLayout {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 5;
  margin-left: 15px;
  margin-right: 15px;
  display: flex;
  flex-direction: column;
}