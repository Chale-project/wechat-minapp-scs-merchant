/* pages/mainClass/ShopChooseProGuang/ShopChooseProGuang.wxss */
.outview {
  background: #fff;
  padding: 10px;
}
.prosearchview {
  height: 50px;
  background: #f5f5f5;
  display: flex;
  align-items: center;
  justify-content: space-between; 
}
.alltitleview {
  color: #333;
  width: 100px;
  padding-left: 10px;
  display: flex;
}
.searchinput {
  width: calc(100% - 90px);
  padding-right: 10px;
  text-align: left;
}
.placeholder {
  color: #ccc;
}
/* 商品列表 */
.sale-item {
  background: #fff;
  margin-bottom:10px;
  height: 120px;
  display: flex;
  align-items: center;
  flex-direction: row;
  padding: 0 10px;
}
.userIconImg {
  width:90px;
  height:90px;
  background: #f5f5f5;
}
.salerightviews {
  width: calc(100% - 90px);
  height: 100px;
  padding-left: 10px;
}
.salerightoneview {
  height: 40%;
}
.productName {
  color:#333;
  font-size: 15px;
  text-overflow: ellipsis;
  overflow: hidden;
  -webkit-box-orient:vertical;
  -webkit-line-clamp:2;
  display:-webkit-box;
}
.productPrice {
  color:red;
  font-size: 13px;
  margin-top: 2px;
  font-weight: bold;
}
.salerightsecview {
  margin-top: 2%;
  height: 58%;
}
.addtimeview {
  color:#666;
  font-size: 13px;
}
.totalsale {
  color:#666;
  font-size: 13px;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}
/* 全部分类 */
.allCaterview {
  background: #f5f5f5;
}
.topcater {
  padding-top: 10px;
  background: #fff;
}
.topcater::after {
  content: '';
  display: block;
  clear: both;
}
.topcater-item {
  background:#f5f5f9;
  box-sizing: content-box;
  width: calc(25% - 10px);
  height: 35px;
  float: left;
  margin: 5px;
  text-align: center;
  line-height: 35px;
  text-overflow:ellipsis;
  white-space:nowrap;
  overflow:hidden;
  border-radius: 5px;
}
.onecaterview{
  background: #fff;
  padding: 5px 0;
}
.fircater {
  color:#333;
  width: 80px;
  height:40px;
  line-height:40px;
  text-align: center;
  margin-left: 10px;
  text-overflow:ellipsis;
  white-space:nowrap;
  overflow:hidden;
}
.twocater::after {
  content: '';
  display: block;
  clear: both;
}
.secondcater-item {
  background:#f5f5f9;
  box-sizing: content-box;
  width: calc(25% - 10px);
  height: 35px;
  float: left;
  margin: 5px;
  text-align: center;
  line-height: 35px;
  text-overflow:ellipsis;
  white-space:nowrap;
  overflow:hidden;
  font-size: 12px;
  border-radius: 5px;
}