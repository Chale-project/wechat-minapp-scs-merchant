.rightitemview {
  background: #fff;
  height: 100px;
  display: flex;
  flex-direction: row;
}
.leftitemview {
  width: calc(100% - 60px);
}
.rightarrowview {
  width: 60px;
  display: flex;
  align-items: center;
  justify-content: center;
}
.userIconImg {
  background: #f5f5f5;
  width:80px;
  height:80px;
  left:10px;
  top:10px;
}
.productName {
  margin-left:100px;
  margin-top:-60px;
  color:#333;
  font-size: 14px;
  width: calc(100% - 100px);
  max-height: 36px;
  text-overflow: ellipsis;
  overflow: hidden;
  -webkit-box-orient:vertical;
  -webkit-line-clamp:2;
  display:-webkit-box;
}
.placeholder {
  color: #9a9a9a;
}
.productPrice {
  margin-left:100px;
  color:#666;
  font-size: 12px;
  margin-top:2px;
}
.productPrice text{
  color: red;
  font: bold;
  font-size: 14px;
}
.oripriceview {
  margin-left:100px;
  color:#666;
  font-size: 12px;
  margin-top:2px;
}
.totalsale {
  margin-top: 5px;
  margin-left:100px;
  color:#666;
  font-size: 12px;
  width:calc(100% - 110px);
}
.totalsale text {
  color: green;
}

.cu-form-group .title {
  min-width: calc(4em + 30rpx);
}

.savebtn {
  margin: 50px;
  color: #fff;
  background: #ff4444;
  border-radius: 5px;
  text-align: center;
  height: 40px;
  line-height: 40px;
}
.dateview {
  width:100%;
  height:200px;
  background:#efe;
}

/* 选规格 */
.vanContentView {
  width: 330px;
  height: 260px;
  background: #fff;
  display: flex;
  align-items: center;
  flex-direction:column;
  border-radius: 5px;
}
.catertoptitle {
  width: 100%;
  height: 50px;
  text-align: center;
  color: #333;
  line-height: 50px;
  border-bottom: 1px solid #f5f5f5;
}
.guigecenterview {
  margin-top: 10px;
  width: 100%;
  height: 150px;
  display: flex;
  padding: 5px;
}
.guigecenterview::after {
  content: '';
  display: block;
  clear: both;
}
.guigenumview{
  box-sizing: content-box;
  min-width: calc(25% - 10px);
  height: 30px;
  float: left;
  padding: 5px;
  max-width: 100%;
}
.guigesingleview {
  height: 50px;
  padding: 0 5px;
  display: flex;
  align-items: center;
  flex-direction: row;
}
.guigenameview {
  color: #000;
  width: 60px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.guigepriceview {
  padding-left: 2px;
  width: 80px;
  color: #000;
}
.lingshouview{
  width:80px;
  border:1px solid #ccc;
  margin-left:10px;
  display:flex;
  align-items:center;
  border-radius:5px;
}
.placeholder {
  color: #ccc;
  font-size: 10px;
}
.guigesingleprice{
  color: #000;
  text-align:left;
  text-overflow:ellipsis;
  white-space:nowrap;
  overflow:hidden;
  font-size: 12px;
}
.guigesingleprices {
  color: #000;
  border-radius:5px;
  border:1px solid #ccc;
  text-align:center;
  width:80px;
  margin-left:10px;
  text-overflow:ellipsis;
  white-space:nowrap;
  overflow:hidden;
  font-size: 12px;
  margin-right: 2px;
}
.cancleorsure {
  margin-top: 10px;
  width: 100%;
  height: 40px;
  display: flex;
  align-items: center;
  flex-direction: row;
  border-top: 1px solid #f5f5f5;
}
.guigeverlineview {
  width: 1px;
  z-index: 10;
  height: 100%;
  background: #f5f5f5;
}
.cancleview {
  width: 50%;
  color: #333;
  background: #f5f5f5;
  text-align: center;
  line-height: 40px;
  border-bottom-left-radius: 5px;
}
.sureview {
  width: 50%;
  background: #ff4444;
  color: #fff;
  text-align: center;
  line-height: 40px;
  border-bottom-right-radius: 5px;
}