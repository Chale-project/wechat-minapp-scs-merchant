.loginaccount {
  width: 100%;
  height: 50px;
  border-bottom: 1px solid #f5f5f5;
  display: flex;
  flex-direction: row;
  padding: 0 10px;
  background: #fff;
  align-items: center;
}
.login {
  width: 70px;
  line-height: 50px;
  color: #000;
}
.shopinfo {
  width: calc(100% - 60px);
  line-height: 50px;
  color: #000;
}
.iphoneinput {
  width: calc(100% - 70px);
  color: #000;
}
.placeholder {
  color: #ccc;
} 
.choosejobview {
  width: calc(100% - 70px);
  line-height: 50px;
}
.saveview {
  width: 60%;
  margin-left: 20%;
  margin-top: 50px;
  background: #ff4444;
  color: #fff;
  line-height: 46px;
  text-align: center;
  border-radius: 5px;
}