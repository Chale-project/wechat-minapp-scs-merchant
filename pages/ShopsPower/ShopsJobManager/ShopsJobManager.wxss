/* pages/ShopsPower/ShopsJobManager/ShopsJobManager.wxss */

.account-item {
  background: #fff;
  width: 100%;
  height: 70px;
  border-bottom: 1px solid #f5f5f5;
  padding: 0 10px;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.topitem {
  width: 85%;
  display: flex;
  flex-direction: column;
}
.verlineview {
  width: 1px;
  height: 60%;
  background: #f5f5f5;
}
.editview {
  width: 15%;
  padding-left: 10px;
  display: flex;
  align-items: center;
  justify-content: center;
}
.editimage {
  width: 20px;
  height: 20px;
}
.userphoneview {
  padding-top: 10px;
}
.userjobview {
  color: #ccc;
  font-size: 12px;
}
.addjobview {
  width: 60%;
  margin-top: 50px;
  margin-left: 20%;
  background: #ff4444;
  color: #fff;
  line-height: 46px;
  text-align: center;
  border-radius: 5px;
}