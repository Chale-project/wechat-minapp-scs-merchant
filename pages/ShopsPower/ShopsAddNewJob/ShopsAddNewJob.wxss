.loginaccount {
  width: 100%;
  height: 50px;
  border-bottom: 1px solid #f5f5f5;
  display: flex;
  flex-direction: row;
  padding: 0 10px;
  background: #fff;
  align-items: center;
}
.login {
  width: 70px;
  line-height: 50px;
  color: #000;
}
.iphoneinput {
  width: calc(100% - 70px);
  color: #000;
}
.placeholder {
  color: #ccc;
}
.quanxian {
  margin-top: 10px;
  padding-left: 10px;
  border-bottom: 1px solid #f5f5f5;
  height: 50px;
  line-height: 50px;
  background: #fff;
}
.account-item {
  background: #fff;
  display: flex;
  
  align-items: center;
  width: 100%;
  border-bottom: 1px solid #f5f5f5;
  padding: 0 10px;
}
.checkchooseviewstore {
  width: 50px;
  height: 50px;
  display: flex;
  align-items: center;
  justify-content: center;
}
.poweritem {
  width: calc(100% - 50px);
  margin-left: 5px;
}
.saveview {
  width: 60%;
  margin-left: 20%;
  background: #ff4444;
  color: #fff;
  line-height: 46px;
  text-align: center;
  border-radius: 5px;
}
.edit{
  height: 120px;
}


.bottomLayout {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  margin-left: 15px;
  width: calc(100% - 30px);
  flex-direction: row;
}

.saveview2 {
  width: 40%;
