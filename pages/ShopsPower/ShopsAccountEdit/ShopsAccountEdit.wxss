/* pages/ShopsPower/ShopsAccountEdit/ShopsAccountEdit.wxss */
.topview {
  height: 50px;
  padding: 0 10px;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1px solid #f5f5f5;
  background: #fff;
}
.loginaccount {
  width: 100%;
  height: 50px;
  border-bottom: 1px solid #f5f5f5;
  display: flex;
  flex-direction: row;
  padding: 0 10px;
  background: #fff;
  align-items: center;
}
.shopinfo {
  width: calc(100% - 60px);
  line-height: 50px;
  color: #000;
}
.saveview {
  width: 60%;
  margin-left: 20%;
  margin-top: 50px;
  background: #ff4444;
  color: #fff;
  line-height: 46px;
  text-align: center;
  border-radius: 5px;
}
.placeholder {
  color: #ccc;
  font-size: 12px;
}

