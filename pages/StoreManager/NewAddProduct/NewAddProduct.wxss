/* pages/StoreManager/NewAddProduct/NewAddProduct.wxss */

.sale-item {
  background: #fff;
  margin-bottom:10px;
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 100%;
}
.checkchooseview {
  width: 50px;
  display: flex;
  align-items: center;
  justify-content: center;
}
.rightitemview {
  width: calc(100% - 50px);
  display: flex;
  align-items: center;
  flex-direction: row;
  min-height: 100px;
}
.userIconImg {
  width:90px;
  height:90px;
  background: #f5f5f5;
}
.rightallview {
  padding-left: 10px;
  width: calc(100% - 90px);
}
.productName {
  color:#333;
  font-size: 14px;
  text-overflow: ellipsis;
  overflow: hidden;
  -webkit-box-orient:vertical;
  -webkit-line-clamp:2;
  display:-webkit-box;
  margin-top: 2px;
}
.productguige {
  margin: 5px 0;
}
.guigeall {
  display: flex;
  flex-direction: column;
}
.guigesingle {
  display: flex;
  align-items: center;
  flex-direction: row;
}
.guigesinglename {
  width: 60px;
  text-overflow:ellipsis;
  white-space:nowrap;
  overflow:hidden;
  color: #666;
}
.lingshouview{
  width:80px;
  border:1px solid #ccc;
  margin-left:10px;
  display:flex;
  align-items:center;
  border-radius:5px;
}
.guigesingleprice{
  color: #000;
  text-align:left;
  text-overflow:ellipsis;
  white-space:nowrap;
  overflow:hidden;
  font-size: 12px;
}
.guigesingleprices {
  color: #000;
  border-radius:5px;
  border:1px solid #ccc;
  text-align:center;
  width:80px;
  margin-left:10px;
  text-overflow:ellipsis;
  white-space:nowrap;
  overflow:hidden;
  font-size: 12px;
  margin-right: 2px;
}
.bottomview {
  height: 50px;
  bottom: 0px;
  background: #f5f5f5;
  z-index: 999;
  position:fixed;
  left:0;
  right:0;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-top: 1px solid #f5f5f5;
}
.checkchooseviews {
  width: 50px;
  display: flex;
  align-items: center;
  justify-content: center;
}
.bottomsecview {
  width: calc(100% - 170px);
  line-height: 50px;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}
.bottomsubview {
  width: 120px;
  text-align: center;
  line-height: 50px;
  background: #ff4444;
  border-radius: 5px;
  color: #fff;
  font-size: 14px;
}

/* 全部分类 */
.allCaterview {
  background: #f5f5f5;
}
.topcater {
  padding-top: 10px;
  background: #fff;
}
.topcater::after {
  content: '';
  display: block;
  clear: both;
}
.topcater-item {
  background:#f5f5f9;
  box-sizing: content-box;
  width: calc(25% - 10px);
  height: 35px;
  float: left;
  margin: 0 10px;
  text-align: center;
  line-height: 35px;
  text-overflow:ellipsis;
  white-space:nowrap;
  overflow:hidden;
  border-radius: 5px;
}
.onecaterview{
  background: #fff;
  padding: 5px 0;
}
.fircater {
  color:#666;
  height:40px;
  width: 80px;
  line-height:40px;
  text-align: center;
  margin-left: 10px;
  text-overflow:ellipsis;
  white-space:nowrap;
  overflow:hidden;
}
.twocater {
  margin: 0 10px;
}
.twocater::after {
  content: '';
  display: block;
  clear: both;
}
.secondcater-item {
  background:#f5f5f9;
  box-sizing: content-box;
  width: calc(25% - 10px);
  height: 35px;
  float: left;
  margin: 5px;
  text-align: center;
  line-height: 35px;
  text-overflow:ellipsis;
  white-space:nowrap;
  overflow:hidden;
  font-size: 12px;
  border-radius: 5px;
}
.outview {
  border-bottom: 1px solid #f5f5f5;
}
.choosetishi {
  width: 100%;
  height: 40px;
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-bottom: 5px;
  background: #fff;
}
.tishipic {
  width: 20px;
  height: 20px;
  margin-left: 15px;
}
.tishiview {
  padding-left: 20px;
  color: #FF9C50;
  font-size: 14px;
  width: calc(100% - 81px);
}
.tishilineview {
  width: 1px;
  height: 20px;
  background: #f5f5f5;
}
.tishirightview {
  width: 40px;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}
.tishiclose {
  width: 20px;
  height: 20px;
}
.prosearchview {
  height: 60px;
  background: #fff;
  display: flex;
  align-items: center;
  justify-content: space-between; 
}
.alltitleview {
  color: #000;
  width: 100px;
  padding-left: 10px;
  display: flex;
}
.searchinput {
  width: calc(100% - 90px);
  padding-right: 10px;
  text-align: left;
}
.placeholder {
  color: #ccc;
}